<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/posting_materials_ET_foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="نام غذا"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:inputType="text"
            android:maxWidth="200dp"
            android:maxLength="20"
            android:maxLines="1"
            android:minWidth="120dp"
            android:text="نام غذا"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/posting_materials_IB_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#FFE500"
            android:contentDescription="TODO"
            android:src="@drawable/ic_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/posting_materials_ET_mount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="مقدار"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:inputType="number"
            android:maxWidth="100dp"
            android:maxLength="5"
            android:minWidth="50dp"
            android:text="مقدار"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintStart_toEndOf="@id/posting_materials_ET_foodName"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
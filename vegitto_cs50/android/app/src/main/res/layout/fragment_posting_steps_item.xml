<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="4dp"
    android:layoutDirection="rtl"
    app:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/posting_steps_TV_stepNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مرحله 1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/posting_steps_ET_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="دستور غذا"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/gray"
            android:gravity="start"
            android:maxEms="50"
            android:maxLength="300"
            android:maxLines="6"
            android:minLines="1"
            android:singleLine="false"
            android:text="دستور"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/posting_steps_TV_stepNum" />

        <ImageButton
            android:id="@+id/posting_steps_IB_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#FFE500"
            android:contentDescription="TODO"
            android:src="@drawable/ic_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/posting_steps_TV_stepNum" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>